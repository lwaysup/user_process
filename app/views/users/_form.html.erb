<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-md-center" >
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, autocomplete: "off", :required => true, class: 'form-control' %>
          </div>
          <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autocomplete: "off", :required => true, class: 'form-control' %>
          </div>
          <div class="form-group">
              <%= f.label :date_of_birth %>
              <%= f.text_field :dob, autocomplete: "off", :required => true, class: 'form-control' %>
          </div>
          <div class="form-group">
              <%= f.label :phone_number %>
              <%= f.text_field :phone, autocomplete: "off", :required => true, class: 'form-control' %>
          </div>
          <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off", :required => true, class: 'form-control' %>
          </div>

          <div >
              <%= f.submit "Submit", class: 'btn btn-primary' %>
          </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<% end %>
